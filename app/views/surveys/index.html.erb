<form action="/submit" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"
    <label for="survey[name]">Your name:</label>
    <input type="text" name="survey[name]">
    <label for="survey[location]">Dojo Location:</label>
    <select name="survey[location]">
        <option value="Valenzuela">Valenzuela</option>
        <option value="Caloocan">Caloocan</option>
        <option value="LaUnion">La Union</option>
        <option value="Malabon">Malabon</option>
    </select>
    <label for="survey[fave]">Favorite Language:</label>
    <select name="survey[fave]">
        <option value="JavaScript">JavaScript</option>
        <option value="Python">Python</option>
        <option value="Ruby">Ruby</option>
        <option value="PHP">PHP</option>
    </select>
    <label for="survey[comment]">Comment(optional)</label>
    <textarea name="survey[comment]"></textarea>
    <input type="submit" name="submit" id="submit">
</form>